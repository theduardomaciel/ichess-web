{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": [".env"],
	"tasks": {
		"build": {
			"dotEnv": [
				"PROJECT_ID",
				"DATABASE_URL",
				"NEXTAUTH_SECRET",
				"GOOGLE_CLIENT_ID",
				"GOOGLE_CLIENT_SECRET",
				"GOOGLE_SHEET_CLIENT_EMAIL",
				"GOOGLE_SHEET_PRIVATE_KEY",
				"PUSHER_APP_ID",
				"PUSHER_SECRET",
				"PUSHER_CLUSTER"
			],
			"dependsOn": ["^build"],
			"outputs": ["dist/**", ".next/**", "!.next/cache/**"]
		},
		"db:generate": {},
		"db:drop": {},
		"db:migrate": {},
		"db:studio": {},
		"db:seed": {},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"lint": {}
	}
}
